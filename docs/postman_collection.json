{
  "info": {
    "name": "PGoldapp Crypto Trading API",
    "description": "Complete API collection for cryptocurrency trading platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"password_confirmation\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get Wallet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet",
              "host": ["{{base_url}}"],
              "path": ["wallet"]
            }
          }
        },
        {
          "name": "Fund Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 50000.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/wallet/fund",
              "host": ["{{base_url}}"],
              "path": ["wallet", "fund"]
            }
          }
        },
        {
          "name": "Get Wallet Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/wallet/transactions?per_page=20",
              "host": ["{{base_url}}"],
              "path": ["wallet", "transactions"],
              "query": [
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Crypto",
      "item": [
        {
          "name": "Get Rates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/crypto/rates",
              "host": ["{{base_url}}"],
              "path": ["crypto", "rates"]
            }
          }
        },
        {
          "name": "Buy Crypto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crypto_type\": \"btc\",\n  \"amount_naira\": 10000.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/crypto/buy",
              "host": ["{{base_url}}"],
              "path": ["crypto", "buy"]
            }
          }
        },
        {
          "name": "Sell Crypto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crypto_type\": \"eth\",\n  \"amount_crypto\": 0.5\n}"
            },
            "url": {
              "raw": "{{base_url}}/crypto/sell",
              "host": ["{{base_url}}"],
              "path": ["crypto", "sell"]
            }
          }
        },
        {
          "name": "Get Trades",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/crypto/trades?crypto_type=btc&trade_type=buy&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["crypto", "trades"],
              "query": [
                {
                  "key": "crypto_type",
                  "value": "btc",
                  "disabled": true
                },
                {
                  "key": "trade_type",
                  "value": "buy",
                  "disabled": true
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Buy Preview",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crypto_type\": \"btc\",\n  \"amount_naira\": 10000.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/crypto/buy/preview",
              "host": ["{{base_url}}"],
              "path": ["crypto", "buy", "preview"]
            }
          }
        },
        {
          "name": "Sell Preview",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"crypto_type\": \"eth\",\n  \"amount_crypto\": 1.0\n}"
            },
            "url": {
              "raw": "{{base_url}}/crypto/sell/preview",
              "host": ["{{base_url}}"],
              "path": ["crypto", "sell", "preview"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions?type=crypto_trade&status=completed&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["transactions"],
              "query": [
                {
                  "key": "type",
                  "value": "crypto_trade",
                  "disabled": true
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                },
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "disabled": true
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "disabled": true
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Transaction by Reference",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transactions/TXN-XXXXXXXXXXXX",
              "host": ["{{base_url}}"],
              "path": ["transactions", "TXN-XXXXXXXXXXXX"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
